<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Submit URL</title>
    <style>
        .error-message {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        #submitButton:disabled {
            opacity: 0.5;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .input-group span {
            padding: 0.5rem;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-right: none;
            border-radius: 4px 0 0 4px;
        }

        .input-group input {
            flex: 1;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-left: none;
            border-radius: 0 4px 4px 0;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>
    <section class="vh-96">
        <div class="container py-5 h-96">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-light-subtle text-dark" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div>
                                <h2 class="fw-bold mb-2 text-uppercase">Submit URL</h2>
                                <p class="text-dark-50 mb-5">Enter your name and URL</p>

                                <form action="/v1/chief/submit-url" method="post" id="urlForm">
                                    <!-- Name field -->
                                    <div class="form-outline mb-4">
                                        <input type="text" id="name" class="form-control form-control-lg" name="name"
                                            placeholder="Name" required />
                                    </div>

                                    <!-- URL field -->
                                    <div class="form-outline mb-4 input-group">
                                        <span>https://</span>
                                        <input type="url" id="url" class="form-control form-control-lg" name="url"
                                            placeholder="Enter URL" required />
                                    </div>

                                    <div class="mt-3">
                                        <button class="btn bg-dark text-light btn-md px-5" id="submitButton"
                                            type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./partials/scripts') %>
</body>

</html>
