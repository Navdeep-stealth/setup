<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>All Users</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <!-- sample table -->
                    <section class="section">
                        <h1 class="h1 fw-bold">Dashboard</h1>
                        <div id="button-container"></div>
                    </section>

                    <div class="card">
                        <h5 class="card-header">Manage Users</h5>
                        <div class="card-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Sr.No</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">FullName</th>
                                        <th scope="col">Role</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <% let count=1; %>
                                    <% users.forEach((user)=> { %>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <%= count++ %>
                                                </td>
                                                <th scope="row">
                                                    <%=user.username%>
                                                </th>
                                                <td>
                                                    <%=user.fullname%>
                                                </td>
                                                <td>
                                                    <%=user.role%>
                                                </td>
                                                <td>
                                                    <%=user.status%>
                                                </td>
                                                <td>
                                                    <a href="/v1/chief/editUser/<%=user.id%>"
                                                        class="btn btn-sm btn-secondary me-1" data-bs-toggle="tooltip"
                                                        data-bs-title="View Details">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </a>
                                                    <a href="/v1/chief/delete/<%=user.id%>"
                                                        class="btn btn-sm btn-danger confirm-link"
                                                        data-bs-toggle="tooltip" data-bs-title="Delete"
                                                        id="confirm-link">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                        </tbody>
                                        <% }); %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./partials/scripts') %>

</body>

</html>
