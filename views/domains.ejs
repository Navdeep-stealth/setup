<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>All Users</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="row">
          <div class="col-12">
              <!-- sample table -->



              <div class="card">
                <section class="section">

                    <h5 class="card-header">Manage Domains</h5>
                    <a class="btn btn-primary" href="/v1/chief/managedomains/adddomain" role="button">Add Domain</a>
                </section>
                  <div class="card-body">
                      <table class="table table-hover">
                          <thead>
                              <tr>
                                  <th scope="col">Sr.No</th>
                                  <th scope="col">Domain</th>
                                  <th scope="col">Created At</th>
                                  <th scope="col">Action</th>
                              </tr>
                          </thead>
                          <% let count = 1; %>
                          <% users.forEach((user) => { %>
                            <tbody>
                                <tr>
                                    <td><%= count++ %></td>
                                    <th scope="row"><%=user.id%></th>
                                    <td><%=user.createdAt%></td>
                                    <td>
                                        <a href="/v1/chief/managedomains/viewDomain/<%=user.id%>" class="btn btn-sm btn-secondary me-1"
                                            data-bs-toggle="tooltip" data-bs-title="View Details">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a href="/v1/chief/managedomains/editDomain/<%=user.id%>" class="btn btn-sm btn-secondary me-1"
                                            data-bs-toggle="tooltip" data-bs-title="Edit">
                                            <i class="fa-solid fa-pen-to-square"></i>                                        </a>
                                        <a href="/v1/chief/managedomains/deleteDomain/<%=user.id%>" class="btn btn-sm btn-danger confirm-link"  data-bs-toggle="tooltip" data-bs-title="Delete"  id="confirm-link">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        <% }); %>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>
<%- include('./partials/scripts') %>

</body>

</html>