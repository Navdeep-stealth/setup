<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Edit User <%=user.fullname%></title>
</head>
<body>
    <%- include('./partials/nav') %>
    <section class="vh-96">
        <div class="container py-5 h-96">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
              <div class="card bg-light-subtle text-dark" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
  
                  <div>
  
                    <h2 class="fw-bold mb-2 text-uppercase">Edit User "<%=user.fullname%>"</h2>
                    <!-- <p class="text-dark-50 mb-5">Enter Username and Password.!</p> -->
                    <p class="text-dark-50 mb-5">_________________________________</p>

                    
  
                    <form action="/v1/chief/update/<%=user.id%>" method="post" id="loginForm">
  
                      <!-- <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" class="form-control form-control-lg" id="userEmail" name="email"
                          placeholder="Enter email..." />
                      </div> -->

                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" class="form-control form-control-lg" id="username" name="username"
                        value="<%=user.username%>" readonly />
                      </div>


                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" class="form-control form-control-lg" id="Fullname" name="fullname"
                        value="<%=user.fullname%>" />
                      </div>

                      
                      <select class="form-select form-outline mb-4" aria-label="Default select example" name="role">
                        <option selected aria-readonly="true"><%=user.role%></option>
                        <option value="admin" >Admin</option>
                        <option value="super_admin">SuperAdmin</option>
                      </select>

                      
                      <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" class="form-control form-control-lg"  name="password"
                        placeholder="Change password" />
                      </div>
                      <h6>Current Status : "<%=user.status%>"</h6>
                      <div data-mdb-input-init class="form-outline mb-4">
                        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                          <input type="radio" class="btn-check" name="status" id="btnradio1" autocomplete="off" value="active"
                            <%= user.status === 'Active' ? 'checked' : '' %>>
                          <label class="btn btn-outline-primary" for="btnradio1">Active</label>
                      
                          <input type="radio" class="btn-check" name="status" id="btnradio2" autocomplete="off" value="disabled"
                            <%= user.status === 'Disabled' ? 'checked' : '' %>>
                          <label class="btn btn-outline-primary" for="btnradio2">Disabled</label>
                      
                          <input type="radio" class="btn-check" name="status" id="btnradio3" autocomplete="off" value="deleted"
                            <%= user.status === 'Deleted' ? 'checked' : '' %>>
                          <label class="btn btn-outline-primary" for="btnradio3">Deleted</label>
                        </div>
                      </div>
                      
                      <% if (typeof errorMessage !== "undefined") { %>
                        <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                Toastify({
                                    text: "<%= errorMessage %>",
                                    duration: 3000,
                                    close: true,
                                    gravity: "top", // `top` or `bottom`
                                    position: "right", // `left`, `center` or `right`
                                    backgroundColor: "red",
                                }).showToast();
                            });
                        </script>
                    <% } %>
  
                      <button data-mdb-button-init data-mdb-ripple-init class="btn bg-dark text-light btn-md px-5"
                        id="loginButton" type="submit">Update</button>
                    </form>
                  </div>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>    
<%- include('./partials/scripts') %>

</body>
</html>